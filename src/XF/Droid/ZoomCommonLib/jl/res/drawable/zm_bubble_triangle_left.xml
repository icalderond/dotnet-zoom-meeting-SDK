<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="80%"
            android:pivotY="130%">
            <shape android:shape="rectangle">
                <size
                    android:width="15dp"
                    android:height="15dp" />
                <solid android:color="@color/zm_white" />
                <stroke
                    android:width="1dp"
                    android:color="@color/zm_v1_gray_3000" />
            </shape>
        </rotate>
    </item>
</layer-list>