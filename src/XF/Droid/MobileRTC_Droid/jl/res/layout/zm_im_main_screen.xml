<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <com.zipow.videobox.view.IMView
        android:id="@+id/imView"
        android:layout_width="fill_parent"
		android:layout_height="fill_parent"/>
    
    <!--
     You must set android:windowSoftInputMode="stateHidden|adjustResize" in the activity
     to make sure ZMKeyboardDetector can work properly.
    -->
    <us.zoom.uicommon.widget.view.ZMKeyboardDetector
        android:id="@+id/keyboardDetector"
        android:layout_width="fill_parent"
		android:layout_height="fill_parent" />

    <us.zoom.uicommon.widget.view.ZMTipLayer
        android:id="@+id/tipLayer"
        android:layout_width="fill_parent"
		android:layout_height="fill_parent" />

    <!-- for uppest layer fragment -->
    <us.zoom.uicommon.widget.view.ZMNavigationFragmentLayout
        android:id="@+id/zm_navigation_fragment_layout"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>