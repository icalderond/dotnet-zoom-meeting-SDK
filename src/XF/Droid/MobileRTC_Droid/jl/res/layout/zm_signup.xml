<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zm_window_bg"
    android:orientation="vertical">

    <us.zoom.uicommon.widget.view.ZMIOSStyleTitlebarLayout
        android:id="@+id/panelTitleBar"
        style="@style/ZmTitleBar"
        android:elevation="0dp"
        zoom:zm_leftButton="@+id/btnBackPanel"
        zoom:zm_rightButton="@+id/btnSignup"
        zoom:zm_title="@+id/txtTitle">

        <LinearLayout
            android:id="@+id/btnBackPanel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                style="@style/ZmBackButton"
                android:contentDescription="@string/zm_btn_back" />

            <Button
                android:id="@+id/btnClose"
                style="@style/ZmTitleBarAction"
                android:contentDescription="@string/zm_btn_close"
                android:text="@string/zm_btn_close"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtTitle"
            style="@style/ZmTitleBarTitle"
            android:text="@string/zm_title_signup" />

    </us.zoom.uicommon.widget.view.ZMIOSStyleTitlebarLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp">

                <LinearLayout
                    android:id="@+id/panelSignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/zm_setting_item_group_spacing"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/zm_dialog_margin_16dp"
                        android:layout_marginBottom="@dimen/zm_dialog_margin_12dp"
                        android:text="@string/zm_login_msg_enter_email_tip_442801"
                        android:textColor="@color/zm_v2_txt_secondary"
                        android:textSize="@dimen/zm_ui_kit_text_size_13sp" />

                    <us.zoom.uicommon.widget.view.ZMSettingsCategory
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/zm_edit_text_normal_height"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/zm_padding_normal_size"
                            android:paddingRight="@dimen/zm_padding_normal_size">

                            <EditText
                                android:id="@+id/edtEmail"
                                style="@style/ZmInputBox"
                                android:hint="@string/zm_hint_email"
                                android:imeOptions="actionDone"
                                android:inputType="textEmailAddress"
                                android:maxLength="128" />

                        </LinearLayout>

                    </us.zoom.uicommon.widget.view.ZMSettingsCategory>

                    <Button
                        android:id="@+id/btnSignupContinue"
                        style="@style/ZmButton"
                        android:layout_marginLeft="@dimen/zm_dialog_margin_24dp"
                        android:layout_marginTop="@dimen/zm_dialog_margin_16dp"
                        android:layout_marginRight="@dimen/zm_dialog_margin_24dp"
                        android:text="@string/zm_signup_continue_442801" />

                    <TextView
                        android:id="@+id/linkAcceptTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/zm_dialog_margin_16dp"
                        android:layout_marginRight="@dimen/zm_dialog_margin_16dp"
                        android:layout_marginTop="@dimen/zm_dialog_margin_12dp"
                        android:textColor="@color/zm_signin_privacy_service_color"
                        android:text="@string/zm_signup_accept_terms_442801"
                        android:textSize="@dimen/zm_ui_kit_text_size_13sp" />

                    <TextView
                        android:id="@+id/reviewAgreements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/zm_dialog_margin_16dp"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/zm_dialog_margin_16dp"
                        android:layout_marginTop="@dimen/zm_dialog_margin_12dp"
                        android:textColor="@color/zm_signup_agreement_txt"
                        android:text="@string/zm_signup_review_agreement_506850"
                        android:textSize="@dimen/zm_ui_kit_text_size_12sp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zm_edit_text_normal_height"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/zm_margin_32dp"
                        android:background="@color/zm_v2_svg_setting_option"
                        android:id="@+id/zm_signup_gdpr_layout"
                        android:visibility="gone"
                        android:paddingLeft="@dimen/zm_padding_normal_size"
                        android:paddingRight="@dimen/zm_padding_normal_size">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/zm_signup_email_subscrip_color"
                            android:text="@string/zm_signup_email_subscription_442801"
                            android:textSize="@dimen/zm_ui_kit_text_size_16sp" />

                        <us.zoom.uicommon.widget.view.ZMCheckedTextView
                            android:id="@+id/zm_signup_email_subscrption_chkbox"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content"
                            android:checkMark="@drawable/zm_btn_toggle_default"
                            android:clickable="false" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/zm_signup_email_sub_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/zm_dialog_margin_16dp"
                        android:layout_marginRight="@dimen/zm_dialog_margin_16dp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/zm_dialog_margin_12dp"
                        android:textColor="@color/zm_v2_txt_secondary"
                        android:text="@string/zm_signup_email_subscription_desc_442801"
                        android:textSize="@dimen/zm_ui_kit_text_size_13sp" />

                    <ViewStub
                        android:id="@+id/viewStubInternational"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout="@layout/zm_view_international_login" />

                    <ViewStub
                        android:id="@+id/viewStubChina"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout="@layout/zm_view_china_login" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>

