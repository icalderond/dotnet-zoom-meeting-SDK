<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnDone"
        style="@style/ZmButton.Text"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/zm_btn_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:text="@string/zm_encrypt_title_new_backup_key_506192"
        android:textColor="@color/zm_v2_txt_primary"
        android:textSize="@dimen/zm_font_large_size"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnDone" />

    <TextView
        android:id="@+id/prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="@string/zm_encrypt_data_prompt_store_key_506192"
        android:textColor="@color/zm_v2_txt_primary"
        android:textSize="@dimen/zm_font_small_size"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <com.zipow.videobox.view.sip.voicemail.encryption.ui.BackupKeyEditText
        android:id="@+id/edtBackupKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/prompt" />

    <Button
        android:id="@+id/btnCopyKey"
        style="@style/ZmButton.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/zm_encrypt_data_btn_copy_key_386885"
        app:layout_constraintTop_toBottomOf="@id/edtBackupKey" />

    <ImageView
        android:id="@+id/ivKeyLoading"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/zm_ic_loading_light_night_animated"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prompt"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/gpKeyInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="edtBackupKey,btnCopyKey" />

</androidx.constraintlayout.widget.ConstraintLayout>