<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llAnswer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:paddingLeft="28dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <com.zipow.videobox.view.AvatarView
        android:id="@+id/avatarView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="15dp"
        android:duplicateParentState="false"
        zoom:zm_cornerRadiusRatio="0.32" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <us.zoom.uicommon.widget.view.PListNameRoleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
           <us.zoom.uicommon.widget.view.ZMCommonTextView
                android:id="@+id/txtAnswerName"
                style="@style/ZMTextView.OnLight.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/zm_textview_textcolor_black_selector"
                android:textStyle="bold"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="Beatruce Walters"
                />
           <us.zoom.uicommon.widget.view.ZMCommonTextView
                android:id="@+id/txtAnswerTime"
                style="@style/ZMTextView.OnLight.Small.Dimmed"
                android:textColor="@color/zm_v2_txt_secondary"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:20 AM"
                />
        </us.zoom.uicommon.widget.view.PListNameRoleLayout>
        <us.zoom.uicommon.widget.view.ZMCommonTextView
            android:id="@+id/txtPrivateAnswer"
            style="@style/ZMTextView.OnLight.Small.Dimmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zm_qa_msg_private_answer_41047"
            />

        <us.zoom.uicommon.widget.view.ZMTextView
            android:id="@+id/txtAnswer"
            style="@style/ZMTextView.OnLight.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:paddingTop="8dp"
            android:text="If you have a business or premier your customers  online using major  cards (Visa, MasterCard, and American Express) or via PayPal. "
            android:textColor="@color/zm_textview_textcolor_black_selector"
            app:showLink="true"/>
    </LinearLayout>

</LinearLayout>