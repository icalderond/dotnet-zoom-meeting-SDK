<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom">

        <TextView
            android:id="@+id/txtTitle"
            style="@style/ZmTextView.Title.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/zm_margin_large_size"
            android:layout_marginRight="@dimen/zm_margin_large_size"
            android:maxLines="5"
            android:text="@string/zm_lbl_wlc_title1_295657" />

    </LinearLayout>

    <ImageView
        android:id="@+id/wlcImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="@dimen/zm_margin_large_size"
        android:layout_marginRight="@dimen/zm_margin_large_size"
        android:scaleType="fitCenter"
        android:src="@drawable/zm_wlc_page_index1"
        tools:ignore="ContentDescription" />
</LinearLayout>