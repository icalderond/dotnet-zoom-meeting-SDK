<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:minWidth="68dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:background="@drawable/zm_mm_opt_btn_overlay">
    
    <View
        android:id="@+id/divider1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/zm_v2_second_divider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageOpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginStart="4dp"
        android:duplicateParentState="true"
        android:importantForAccessibility="no"
        tools:src="@drawable/zm_mm_opt_panel_videocall_icon"
        app:layout_constraintBottom_toTopOf="@+id/txtOptDesc"
        app:layout_constraintLeft_toRightOf="@id/divider1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@id/txtOptDesc"
        style="@style/ZmTextView.Content.Primary.Small.Dimmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:duplicateParentState="true"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:importantForAccessibility="no"
        tools:text="@string/zm_mm_opt_video_call"
        android:textColor="@color/zm_v2_im_keyboard_panel_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/divider1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageOpt"/>

