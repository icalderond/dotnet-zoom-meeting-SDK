<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:focusable="true"
	android:clickable="true"
	android:focusableInTouchMode="true"
    android:weightSum="1" >

	<EditText
		android:layout_width="1dp"
		android:layout_height="1dp"
		android:id="@+id/edtUnVisible"
		android:layout_marginTop="-1dp"
		tools:ignore="LabelFor">
		<requestFocus/>
	</EditText>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zm_pt_titlebar_height">

		<RelativeLayout
			android:id="@+id/panelSearchBar"
			style="@style/ZMTitleBar.Dark"
			android:layout_width="match_parent"
			android:layout_height="@dimen/zm_pt_titlebar_height" >
            <com.zipow.videobox.view.ZMSearchBar
                android:id="@+id/searchBar"
                style="@style/ZmTitleBar.Dark"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="16dp"
                android:paddingRight="5dp"
                android:layout_toLeftOf="@+id/btnCancel"
                android:layout_alignWithParentIfMissing="true"
                zoom:editTextHint="@string/zm_hint_search"
                zoom:imeOptions="actionSearch"
                zoom:noMargin="true"
				zoom:onDark="true"/>

			<Button
				android:id="@+id/btnCancel"
				style="@style/ZmTitleBarAction.Dark"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:text="@string/zm_btn_cancel" />
	    </RelativeLayout>

		<us.zoom.uicommon.widget.view.ZMIOSStyleTitlebarLayout
			android:id="@+id/panelTitleBar"
			style="@style/ZmTitleBar.Dark"
			zoom:zm_leftButton="@+id/btnClose"
			zoom:zm_rightButton="@+id/panelRight"
			zoom:zm_title="@+id/txtTitle" >

			<Button
				android:id="@+id/btnClose"
				style="@style/ZmTitleBarAction.Dark"
				android:text="@string/zm_btn_close" />

			<LinearLayout
				android:id="@+id/panelRight"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<Button
					android:id="@+id/btnShare"
					style="@style/ZmTitleBarAction.Dark"
					android:text="@string/zm_btn_share" />
			</LinearLayout>

			<us.zoom.uicommon.widget.view.ZMDynTextSizeTextView
				android:id="@+id/txtTitle"
				style="@style/ZmTitleBarTitle.Dark"
				android:text="@string/zm_mm_title_share_to" />
		</us.zoom.uicommon.widget.view.ZMIOSStyleTitlebarLayout>

	</FrameLayout>

    <com.zipow.videobox.view.ZMSearchBar
        android:id="@+id/edtSearchDummy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/zm_white"
        zoom:editTextHint="@string/zm_hint_search"
        zoom:cursorVisible="false" />

    <View
        android:id="@+id/searchBarDivideLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/zm_im_search_shadow" />

	<us.zoom.zimmsg.view.IMMMConnectAlertView
		android:id="@+id/panelConnectionAlert"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"/>
    
    <FrameLayout
        android:id="@+id/listContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <com.zipow.videobox.view.mm.MMSelectSessionAndBuddyListView
            android:id="@+id/sessionsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
			android:divider="@android:color/transparent"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/emptyLinear"
			android:visibility="gone"
			tools:visibility="visible"
			android:background="@color/zm_white"
			android:orientation="vertical">
			<TextView
				android:id="@+id/txtEmptyView"
				style="@style/ZmTextView.Button.Secondary.Dimmed"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:paddingTop="30dp"
				android:gravity="center_horizontal|top"
				android:text="@string/zm_lbl_search_result_empty"
				android:visibility="gone"
				tools:visibility="visible"/>

			<TextView
				android:id="@+id/txtIBTipsCenter"
				style="@style/ZmTextView.Content.Primary.Dimmed"
				android:maxLines="@integer/maximum_lines"
				android:paddingLeft="36dp"
				android:paddingRight="36dp"
				android:layout_gravity="center"
				android:visibility="visible"
				android:text="@string/zm_mm_information_barries_dialog_search_all_115072"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
		</LinearLayout>
        

    </FrameLayout>
	<LinearLayout
		android:orientation="vertical"
		android:id="@+id/panelNoteView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/zm_white"
		android:visibility="gone">
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/zm_v2_chat_input_border"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="12dp"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:paddingBottom="8dp"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/panelShareView"
				android:padding="@dimen/zm_padding_medium"
				android:background="@drawable/zm_mm_share_session_note_bg"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="14dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <com.zipow.videobox.view.AvatarView
						android:id="@+id/noteAvatar"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </com.zipow.videobox.view.AvatarView>
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_weight="1">
						<TextView
							android:id="@+id/noteShareFromTxt"
							style="@style/ZmTextView.Content.Primary.Medium"
							android:layout_width="wrap_content"
							android:gravity="left"
							android:maxWidth="165dp"
							android:layout_height="wrap_content">

						</TextView>

						<TextView
							android:id="@+id/noteShareGroupTxt"
							style="@style/ZmTextView.Content.Primary.Medium"
							android:ellipsize="middle"
							android:maxWidth="100dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">

						</TextView>
					</LinearLayout>


					<TextView
						android:id="@+id/noteShareTimeTxt"
						style="@style/ZmTextView.Content.Primary.Medium.Dimmed"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

					</TextView>
				</LinearLayout>
				<TextView
					android:id="@+id/noteShareContentTxt"
					style="@style/ZmTextView.Content.Primary.Dimmed"
					android:maxLines="2"
					android:layout_marginTop="8dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

				</TextView>
			</LinearLayout>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="@dimen/zm_btn_height_32dp"
				android:id="@+id/noteEditView"
				style="@style/ZmTextView.Content.Primary"
				android:textColorHint="@color/zm_v2_txt_placeholder"
				android:background="@drawable/zm_mm_share_session_note_edit_bg"
				android:gravity="left|center_vertical"
				android:hint="@string/zm_mm_share_note_edit_hint_406646"
				>
			</EditText>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>