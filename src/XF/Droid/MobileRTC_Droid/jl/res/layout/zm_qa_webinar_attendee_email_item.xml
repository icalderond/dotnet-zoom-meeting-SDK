<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="46dp"
    android:gravity="center_vertical"   
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:background="@color/zm_v2_window_gb">
    
    <ImageView
        android:id="@+id/imgAttention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:src="@drawable/zm_ic_distract"
        tools:ignore="ContentDescription"
        tools:visibility="visible"/>
    
    <LinearLayout  
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <us.zoom.uicommon.widget.view.PListNameRoleLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp">
           <us.zoom.uicommon.widget.view.ZMCommonTextView
                android:id="@+id/txtName"
                style="@style/ZMTextView.Medium.DialogMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Name"
               android:textColor="@color/zm_v2_txt_primary"/>

           <us.zoom.uicommon.widget.view.ZMCommonTextView
                android:id="@+id/txtRole"
                style="@style/ZMTextView.Small.Dimmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:singleLine="true"
               android:textColor="@color/zm_v2_txt_secondary_color"
                 />
        </us.zoom.uicommon.widget.view.PListNameRoleLayout>
        
 </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/zm_ze_attendee_plist_item_listen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/zm_btn_ze_plist_listen"
        android:layout_marginEnd="@dimen/zm_margin_small"
        tools:visibility="visible"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/imgRaiseHand"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/reaction_270b"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imgAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:src="@drawable/zm_audio_on"
        android:visibility="gone"
        tools:ignore="ContentDescription"
        tools:visibility="visible"/>

</LinearLayout>